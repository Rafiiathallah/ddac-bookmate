@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1>Welcome Back!</h1>
        <p class="dashboard-subtitle">Your personal reading space</p>
    </div>

    <div class="dashboard-grid">
        <div class="dashboard-card">
            <div class="card-icon">
                <i class="bi bi-book"></i>
            </div>
            <h3>My Library</h3>
            <p>Access your purchased and borrowed books</p>
            <a href="/Books" class="card-link">View Library</a>
        </div>

        <div class="dashboard-card">
            <div class="card-icon">
                <i class="bi bi-bookmark"></i>
            </div>
            <h3>Reading List</h3>
            <p>Books you've saved for later</p>
            <a href="#" class="card-link">View List</a>
        </div>

        <div class="dashboard-card">
            <div class="card-icon">
                <i class="bi bi-person"></i>
            </div>
            <h3>Profile</h3>
            <p>Manage your account settings</p>
            <a href="/Identity/Account/Manage" class="card-link">View Profile</a>
        </div>
    </div>
</div> 