@{
    ViewData["Title"] = "Home Page";
}

<div class="landing-container">
    <div class="hero-section text-center">
        <h1 class="hero-title">Your Digital Library Awaits</h1>
        <p class="hero-subtitle">
            Discover, read, and collect your favorite books in one place. Join thousands of 
            readers in their digital reading journey.
        </p>
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary explore-btn">
            Explore Library
        </a>
    </div>

    <div class="features-section">
        <h2 class="features-title">Why Bookmate?</h2>
        
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <img src="~/icons/books.svg" alt="Books icon" class="feature-svg" />
                </div>
                <h3>Vast Collection</h3>
                <p>Access thousands of books across all genres, from classics to latest releases</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <img src="~/icons/search.svg" alt="Search icon" class="feature-svg" />
                </div>
                <h3>Smart Discovery</h3>
                <p>Find your next favorite book with personalized recommendations</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <img src="~/icons/cloud.svg" alt="Cloud icon" class="feature-svg" />
                </div>
                <h3>Cloud Library</h3>
                <p>Access your books anywhere, anytime, across all your devices</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <img src="~/icons/star.svg" alt="Star icon" class="feature-svg" />
                </div>
                <h3>Collections</h3>
                <p>Create custom collections and share them with the community</p>
            </div>
        </div>
    </div>
</div>
