@{
    ViewData["Title"] = "Home Page";
}

<div class="landing-container">
    <div class="hero-section text-center">
        <h1 class="hero-title">Your Digital Library Awaits</h1>
        <p class="hero-subtitle">
            Discover, read, and collect your favorite books in one place. Join 
            thousands of readers in their digital reading journey.
        </p>
        <a class="explore-btn" asp-area="Identity" asp-page="/Account/Register">Explore Library</a>
    </div>

    <div class="features-section">
        <h2 class="features-title">Why Bookmate?</h2>
        
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-book fs-1"></i>
                </div>
                <h3>Vast Collection</h3>
                <p>Access thousands of books across all genres, from classics to latest releases</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-search fs-1"></i>
                </div>
                <h3>Smart Discovery</h3>
                <p>Find your next favorite book with personalized recommendations</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-cloud fs-1"></i>
                </div>
                <h3>Cloud Library</h3>
                <p>Access your books anywhere, anytime, across all your devices</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-star fs-1"></i>
                </div>
                <h3>Collections</h3>
                <p>Create custom collections and share them with the community</p>
            </div>
        </div>
    </div>
</div>
